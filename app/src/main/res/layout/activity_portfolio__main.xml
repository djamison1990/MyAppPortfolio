<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:background="@drawable/gradient_background"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Portfolio_Main">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_apps"
        android:id="@+id/tvMyApps"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <Button
        android:background="@drawable/button_rounded_corners"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/spotify_streamer"
        android:id="@+id/btnSpotifyStream"
        android:layout_below="@+id/tvMyApps"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <Button
        android:background="@drawable/button_rounded_corners"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/scores_app"
        android:id="@+id/btnScores"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/btnSpotifyStream"
        android:layout_centerHorizontal="true" />

    <Button
        android:background="@drawable/button_rounded_corners"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/library_app"
        android:id="@+id/btnLibrary"
        android:layout_below="@+id/btnScores"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <Button
        android:background="@drawable/button_rounded_corners"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/build_it_bigger"
        android:id="@+id/btnBuildItBigger"
        android:layout_below="@+id/btnLibrary"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <Button
        android:background="@drawable/button_rounded_corners"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/xyz_reader"
        android:id="@+id/btnXYZ"
        android:layout_below="@+id/btnBuildItBigger"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <Button
        android:background="@drawable/button_rounded_corners"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/capstone_my_app"
        android:id="@+id/btnCapstone"
        android:layout_below="@+id/btnXYZ"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />
</RelativeLayout>
